{
  "name": "meme-break",
  "displayName": "Meme Break",
  "description": "Take coding breaks with fresh programming memes - stay refreshed, code better!",
  "version": "1.1.1",
  "publisher": "rithytep",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rithytep/wl-meme-break"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "meme",
    "break",
    "fun",
    "programming",
    "humor"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "meme-break.showMeme",
        "title": "Meme Break: Show Latest Meme"
      },
      {
        "command": "meme-break.popupMeme",
        "title": "Meme Break: Popup Meme (Quick View)"
      },
      {
        "command": "meme-break.startBreakTimer",
        "title": "Meme Break: Start Break Timer"
      },
      {
        "command": "meme-break.stopBreakTimer",
        "title": "Meme Break: Stop Break Timer"
      }
    ],
    "keybindings": [
      {
        "command": "meme-break.showMeme",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "configuration": {
      "title": "Meme Break",
      "properties": {
        "meme-break.breakInterval": {
          "type": "number",
          "default": 60,
          "description": "Break reminder interval in minutes"
        },
        "meme-break.autoShowMeme": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show meme when break timer triggers"
        },
        "meme-break.memeSubreddits": {
          "type": "array",
          "default": [
            "ProgrammerHumor",
            "programmerreactions",
            "softwaregore",
            "iiiiiiitttttttttttt",
            "techhumor",
            "linuxmemes",
            "webdev",
            "javascript",
            "coding",
            "cscareerquestions"
          ],
          "description": "Subreddits to fetch memes from (10 channels by default)"
        },
        "meme-break.displayMode": {
          "type": "string",
          "enum": ["panel", "popup"],
          "default": "panel",
          "description": "How to display memes: panel (full view) or popup (quick notification)"
        },
        "meme-break.sortBy": {
          "type": "string",
          "enum": ["hot", "new", "top"],
          "default": "hot",
          "description": "Sort memes by: hot (trending), new (latest), or top (best)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
