{
  "name": "wl-meme-break",
  "displayName": "WL Meme Break",
  "description": "Take a break with random programming memes. Stay refreshed, code better!",
  "version": "1.0.0",
  "publisher": "rithytep",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rithytep/wl-meme-break"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "meme",
    "break",
    "fun",
    "programming",
    "humor"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wl-meme.showMeme",
        "title": "WL Meme: Show Random Meme"
      },
      {
        "command": "wl-meme.startBreakTimer",
        "title": "WL Meme: Start Break Timer"
      },
      {
        "command": "wl-meme.stopBreakTimer",
        "title": "WL Meme: Stop Break Timer"
      }
    ],
    "keybindings": [
      {
        "command": "wl-meme.showMeme",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "configuration": {
      "title": "WL Meme Break",
      "properties": {
        "wl-meme.breakInterval": {
          "type": "number",
          "default": 60,
          "description": "Break reminder interval in minutes"
        },
        "wl-meme.autoShowMeme": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show meme when break timer triggers"
        },
        "wl-meme.memeSubreddits": {
          "type": "array",
          "default": ["ProgrammerHumor"],
          "description": "Subreddits to fetch memes from"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
